            div
                - var classparent = 'company'
                include ../_elements/logo/_logo

            div
                include _menutop

//- Company = Logo + Menu + Contact button
.block-bl.pd_tb_block
    .block.wrapper.pd_block
        h2.block__head .company / .gamburger + _logo + _btn_contacts + .navlist + _navlist-sub
